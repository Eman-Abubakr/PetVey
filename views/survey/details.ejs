<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

                <div class="form-group mt-2">
                    <label for="surveyTextField">Title : </label>
                    <strong><%= survey.Title %></strong>
                </div>
                <div class="form-group mt-2">
                    <label for="surveyTextField">Description : </label>
                    <strong><%= survey.Description %></strong>
                </div>
                <div class="form-group mt-2">
                    <label for="statusTextField"></label>
                    <strong><%= survey.QuestionsNumber %></strong>                    
                </div>
                <div class="form-group mt-2 mb-2 bg-light">
                    <% survey.Questions.forEach((question, index) => { %>
                    <label>Question <%=index + 1%>: </label>
                    <strong><%= question.QuestionBody %></strong>
                    <p><%= question.AnswerType %></p>
                    <br>
                <% }); %>
                </div>            
                
                <a href="/survey/list" class="btn btn-warning mt-5">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>
